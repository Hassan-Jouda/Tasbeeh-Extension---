{
  "manifest_version": 3,
  "name": "مسبحة إلكترونية",
  "version": "1.0",
  "description": "إضافة مسبحة إلكترونية لحساب عدد التسبيحات مع تغيير الذكر في كل ضغطة.",
  "permissions": ["storage", "notifications", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}